---
const { prev, next, last } = Astro.props;
---

<nav class="flex gap-5 text-xl">
  <a href={prev} class="text-[#c4c1b9]"> &lt; </a>
  <a href="/blog" class="text-[#c4c1b9]"> 1 </a>
  <span>...</span>
  <a href={"/blog/" + last} class="text-[#c4c1b9]">{last}</a>
  <a href={next} class="text-[#c4c1b9]"> &gt; </a>
</nav>
