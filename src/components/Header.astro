---
import { SITE_TITLE } from "../consts";

const { position } = Astro.props;
const { pathname } = Astro.url;
---

<header
  class={`px-4 py-2 text-white w-full ${position ? `${position} bg-black md:bg-transparent` : ""}`}
>
  <nav class="flex items-center justify-between p-4">
    <h2 class="m-0 text-[1.3rem]">
      <a href="/" class="text-gray-200 hover:text-gray-200">{SITE_TITLE}</a>
    </h2>
    <div class="flex gap-4">
      <a
        href="/"
        class={`${pathname == "/" ? " text-baseGray font-semibold underline underline-offset-4 hover:text-baseGray decoration-2 decoration-pink-600" : "text-white hover:text-pink-600"} text-xl`}
        >me</a
      >
      <a
        href="/blog"
        class={`${pathname == "/blog/" ? "text-baseGray font-semibold underline underline-offset-4 hover:text-baseGray decoration-2 decoration-pink-600" : "text-white hover:text-pink-600"} text-xl`}
        >blog</a
      >
    </div>
  </nav>
</header>
